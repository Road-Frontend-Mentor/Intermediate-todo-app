main.main
  form#new-todo-form.form.form--new-todo
    .form__field.form__field--no-border-bottom
      input#add-new-todo-checkbox.form__checkbox(type="checkbox", name="add-new-todo-checkbox")
      label.form__checkbox-label(for="add-new-todo-checkbox")
      input#add-new-todo.form__input(type="text", name="add-new-todo" placeholder="Add new todo")

  - const todos=["complete online javascript tutorial", "Jog around the park 3x", "10 minutes meditation", "Read for 1 hours","Read for 1 hours","Pick up groceries", "Complete Todo App on Frontend Mentor"]

  .panel
    form#todo-list-form.form.form--todo-list__icon
      ul#todo-list.todo-list
        each todo, index in todos
          li.todo-list__item
            .form__field
              input.form__checkbox(type="checkbox", name="todos" id=`todo-checkbox-${index}` value=todo)
              label.form__checkbox-label(for=`todo-checkbox-${index}`)
              input.form__input(type="text", name=`todo-input-${index}` placeholder="Task name" value=todo id=`todo-input-${index}`)
              button.form__delete-buttom: img.form__cross(src="images/icon-cross.svg", alt="Delete todo image")
  .filter
    p.filter__items-left 5 items left
    ul.filter__filter-list.filter-list
      li.filter-list__items: buttom#filter-all.filter__button.filter__button--active All
      li.filter-list__items: buttom#filter-active.filter__button Active
      li.filter-list__items: buttom#filter-completed.filter__button Completed
    p.filter__clear Clear completed

